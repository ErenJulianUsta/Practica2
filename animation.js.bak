@import url(https://fonts.googleapis.com/css?family=Open+Sans:600);

body {
	font-family: 'Open Sans', sans-serif;
	font-weight: 600;
	font-size: 40px;
}

.text {
	position: static;
	width: 450px;
	left: 50%;
	margin-left: center;
	height: 40px;
	top: 50%;
}

p {
	display: inline-block;
	vertical-align: top;
	margin: 0;
}

label {
	font-size: 20px;
}

button {
	font-size: 20px;
	width: 100px;
	height: 40px;
}

.word {
	position: absolute;
	width: 220px;
	opacity: 0;
}
